		<button type="page" label="Ratings" icon="TrailMapping_icons/button_track_grade3.png" targetlayout="Ratings" />
	</row>  
	<row>
	<!-- "link" to 3 sub pages -->
		<button type="page" label="Amenities" icon="TrailMapping_icons/button_tourism_monument.png" targetlayout="Amenities" />
		<button type="page" label="Overnight" icon="TrailMapping_icons/button_tourism_monument.png" targetlayout="Overnight" />
		<button type="page" label="Natural Features" icon="TrailMapping_icons/button_tourism_monument.png" targetlayout="NaturalFeatures" />
	</row>
</layout>
  
