		<button type="page" label="Access" icon="TrailMapping_icons/button_restriction.png" targetlayout="Access" />
		<button type="page" label="Route Marking" icon="TrailMapping_icons/button_way.png" targetlayout="RouteMarking" />
		<button type="page" label="Width / Surface" icon="TrailMapping_icons/width.png" targetlayout="WidthSurface" />
	</row>
	<row>
	<!-- "link" to 4 sub pages -->
		<button type="page" label="Visibility" icon="TrailMapping_icons/button_amenity_library.png" targetlayout="Visibility" />
